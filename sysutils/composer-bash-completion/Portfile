# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

github.setup        sjorek composer-bash-completion 0.1.3 v
revision            1

name                composer-bash-completion
categories          sysutils lang php
platforms           darwin freebsd openbsd
maintainers         gmail.com:stephan.jorek openmaintainer
license             BSD

homepage            https://sjorek.github.io/composer-bash-completion/

description         Bash completion support for composer.

long_description    The completion routines support completing all \
                    composer commands and options, even if provided \
                    by plugins.

supported_archs     noarch

checksums           rmd160  13e862a0b914b7490c9d1fac00c11406e4915e82 \
                    sha256  9535d9c40d51d5169cb75d2455093c663d3b4e787908efad766e4f04201dd989

depends_run-append  bin:composer:composer \
                    port:bash-completion

use_configure       no

build {}

destroot {
    set completions_path ${prefix}/share/bash-completion/completions
    set shared_path ${prefix}/share/${name}

    reinplace "s|#COMPOSER_COMPLETION_GENERATOR=|COMPOSER_COMPLETION_GENERATOR=\${COMPOSER_COMPLETION_GENERATOR:-${shared_path}/composer-completion.php}|g" ${worksrcpath}/composer-completion.bash

    xinstall -m 0755 -d ${destroot}${completions_path}
    xinstall -m 0755 -d ${destroot}${shared_path}
    xinstall -m 0644 -c ${worksrcpath}/composer-completion.bash ${destroot}${completions_path}/composer
    xinstall -m 0644 -c ${worksrcpath}/composer-completion.php ${destroot}${shared_path}/composer-completion.php
}
