# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

github.setup        sjorek composer-bash-completion 0.1.2 v

name                composer-bash-completion
categories          sysutils lang php
platforms           darwin freebsd openbsd
maintainers         gmail.com:stephan.jorek openmaintainer
license             BSD

homepage            https://sjorek.github.io/composer-bash-completion/

description         Bash completion support for composer.

long_description    The completion routines support completing all \
                    composer commands and options, even if provided \
                    by plugins.

supported_archs     noarch

checksums           rmd160  a4b60109a34e9380a7d1e81c61192d8eb8745de2 \
                    sha256  7334a7cfa6dcad3a88680ee271be048a6ac0002f4c34e0d4ed7bc123bfc48527

depends_run-append  bin:composer:composer \
                    port:bash-completion

use_configure       no

build {}

destroot {
    xinstall -d -m 0755 ${destroot}${prefix}/etc/bash_completion.d
    xinstall -d -m 0755 ${destroot}${prefix}/share/${name}

    copy ${worksrcpath}/composer-completion.bash ${destroot}${prefix}/etc/bash_completion.d/composer
    copy ${worksrcpath}/composer-completion.php ${destroot}${prefix}/share/${name}/composer-completion.php
    reinplace "s|#COMPOSER_COMPLETION_GENERATOR=|COMPOSER_COMPLETION_GENERATOR=\${COMPOSER_COMPLETION_GENERATOR:-${prefix}/share/${name}/composer-completion.php}|g" ${destroot}${prefix}/etc/bash_completion.d/composer
}
